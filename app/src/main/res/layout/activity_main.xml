<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:baselineAligned="false"
    tools:context="ua.com.vando.apk_airplan.ActivityMain">

    <TextView
        android:text="Info"
        android:textSize="24dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtInfo" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="28dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <EditText
            android:id="@+id/edtSend"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.56"
            android:ems="10"
            android:inputType="textPersonName"
            android:text='{"Func":"SetPin", "Args":[12,1]}' />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnSendOnClick"
            android:text="Send" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="28dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="6">

        <TextView
            android:text="ADC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="0.27"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:text="ADC"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtADC"
            android:layout_weight="1" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_columnSpan="3"
            />

        <CheckBox
            android:id="@+id/cbMotorRev"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="cbMotorRevOnClick"
            android:text="Reverse" />

        <Button
            android:id="@+id/btnMotorStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnMotorStopOnClick"
            android:text="Stop"/>

        <Button
            android:id="@+id/btnMotorStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnMotorStartOnClick"
            android:text="Start"/>

        <TextView
            android:text="Motor 1"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/textMotor1"
            android:layout_weight="0.05" />

        <TextView
            android:text="TextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtMotor1"
            android:layout_columnSpan="2"
            android:layout_weight="0.08" />

        <SeekBar
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:id="@+id/sbMotor1"
            android:layout_columnSpan="3"
            android:layout_weight="1" />

        <TextView
            android:text="Motor 2"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/textMotor2"
            android:layout_weight="0.05" />

        <TextView
            android:text="TextView"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtMotor2"
            android:layout_columnSpan="2"
            android:layout_weight="0.08" />

        <SeekBar
            android:id="@+id/sbMotor2"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_weight="1" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_columnSpan="3"
            />

        <TextView
            android:text="SMotor 1"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/textSMotor1"
            android:layout_weight="0.05" />

        <TextView
            android:text="TextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtSMotor1"
            android:layout_weight="0.08" />

        <SeekBar
            android:id="@+id/sbSMotor1"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:contextClickable="false"
            android:enabled="false"
            android:visibility="gone" />

        <TextView
            android:text="SMotor 2"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/textSMotor2"
            android:layout_weight="0.05" />

        <TextView
            android:text="TextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtSMotor2"
            android:layout_weight="0.08" />

        <SeekBar
            android:id="@+id/sbSMotor2"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:visibility="invisible" />

        <TextView
            android:text="SMotor 3"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:id="@+id/textSMotor3"
            android:layout_weight="0.05" />

        <TextView
            android:text="TextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtSMotor3"
            android:layout_weight="0.08" />

        <SeekBar
            android:id="@+id/sbSMotor3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:visibility="invisible" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_columnSpan="3" />

        <CheckBox
            android:id="@+id/cbLampAll"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:onClick="cbLampAllOnClick"
            android:text="All Lamps" />

        <TextView
            android:text="Lamp (PIO 15)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewRed"/>

        <TextView
            android:text="TextView"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtLampRed"
            android:layout_weight="0.05" />

        <CheckBox
            android:text="Red"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:id="@+id/cbLampRed"/>
        <TextView
            android:text="Lamp (PIO 12)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewGreen"/>

        <TextView
            android:text="TextView"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtLampGreen"
            android:layout_weight="0.05" />

        <CheckBox
            android:text="Green"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:id="@+id/cbLampGreen"/>

        <TextView
            android:text="Lamp (PIO 13)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBlue"/>

        <TextView
            android:text="TextView"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtLampBlue"
            android:layout_weight="0.05" />

        <CheckBox
            android:text="Blue"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:id="@+id/cbLampBlue"/>

        <TextView
            android:text="Lamp (PIO 02)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSys"/>

        <TextView
            android:text="TextView"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtLampSys"
            android:layout_weight="0.05" />

        <CheckBox
            android:text="Sys"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:id="@+id/cbLampSys"/>
    </GridLayout>



</LinearLayout>